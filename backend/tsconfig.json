{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["node", "express"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
